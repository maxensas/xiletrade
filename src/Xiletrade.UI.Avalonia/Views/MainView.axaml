<view:ViewBase x:Class="Xiletrade.UI.Avalonia.Views.MainView"
        xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:t="clr-namespace:Xiletrade.Library.ViewModels.Main;assembly=Xiletrade.Library"
        xmlns:view="clr-namespace:Xiletrade.UI.Avalonia.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:DataType="t:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Xiletrade.UI.Avalonia">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <t:MainViewModel/>
    </Design.DataContext>

    <TextBlock Text="{Binding ViewScale}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

</view:ViewBase>
