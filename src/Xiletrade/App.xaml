<Application x:Class="Xiletrade.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes\Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="LithosProRegular">pack://application;,,,/Assets/Lithos-Pro-Regular.ttf#Lithos Pro Regular</FontFamily>
            <FontFamily x:Key="FontinSmallCaps">pack://application;,,,/Assets/Fontin-SmallCaps.ttf#Fontin SmallCaps</FontFamily>
            <!--
            <FontFamily x:Key="LithosProRegular">./Fonts/Lithos-Pro-Regular.ttf#Lithos Pro Regular</FontFamily>
            -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
