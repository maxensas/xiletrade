                    </Grid>
                    
                    <!-- HIDDEN PART -->
                    <Grid x:Name="panelAureus" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="2" Visibility="{Binding Form.Visible.SanctumFields, Converter={StaticResource bool2VisibilityConverter}}">
