                                        Value="{Binding Form.Panel.Common.Quality.MinSlide}" 
                                        Minimum="{Binding Form.Panel.Common.Quality.MinSlideDefault, Converter={StaticResource getSliderRangeMin}}" 
                                        Maximum="{Binding Form.Panel.Common.Quality.MinSlideDefault, Converter={StaticResource getSliderRangeMax}}" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- HIDDEN PARTS-->
