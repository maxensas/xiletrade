                                <TextBox Margin="40,16,0,0" Style="{StaticResource tbStatMax}" Text="{Binding Form.Panel.Common.Quality.Max, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>
                            <Grid Visibility="{Binding Form.Panel.Common.Quality.ShowSlide, Converter={StaticResource bool2VisibilityConverter}}">
                                <Slider Margin="4,16,0,0" Width="72" d:Value="5"
