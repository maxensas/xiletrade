                        <CheckBox Margin="7,4,0,0" Style="{StaticResource checkBoxStat}" IsChecked="{Binding Form.Panel.Map.Quantity.Selected}" ToolTip="{ext:Localization General133_Iiq}"/>
                        <Grid IsEnabled="{Binding Form.Panel.Map.Quantity.Selected}">
                            <Grid Visibility="{Binding Form.Panel.Map.Quantity.ShowSlide, Converter={StaticResource inverseBool2VisibilityConverter}}">
