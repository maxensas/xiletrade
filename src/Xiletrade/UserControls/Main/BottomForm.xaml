                                <TextBox Margin="40,17,0,0" Style="{StaticResource tbStatMax}" Text="{Binding Form.Panel.Defense.Armour.Max, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>
