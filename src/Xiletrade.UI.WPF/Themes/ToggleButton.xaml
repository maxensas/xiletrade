                                 To="13"
                                 Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                 Storyboard.TargetProperty="Width"
                                 To="13"
                                 Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource ThemeFirstBackgroundBrush}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ToggleSwitchLarge" TargetType="ToggleButton">
        <Setter Property="Width" Value="46"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Background" Value="{DynamicResource DisabledBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <!--<Setter Property="Tag" Value="0.5"/>-->
        <!-- Tag used to control scale level-->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <!--
                    <Grid.LayoutTransform>
                        <TransformGroup>
                            <ScaleTransform 
                                ScaleX="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                ScaleY="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"/>
                        </TransformGroup>
                    </Grid.LayoutTransform>
                    -->
                        <!-- Track -->
                        <Border x:Name="SwitchTrack"
                        CornerRadius="14"
                        Background="{TemplateBinding Background}"
                        Height="{TemplateBinding Height}"
                        Width="{TemplateBinding Width}" BorderBrush="{DynamicResource SoftBackgroundBrush}" BorderThickness="1"/>
                        <!-- Thumb -->
                        <Ellipse x:Name="SwitchThumb"
                         Fill="{DynamicResource SoftBackgroundBrush}"
                         Width="13"
                         Height="13"
                         Margin="-18,3,0,3"
                         HorizontalAlignment="Center"
                         RenderTransformOrigin="0.5,0.5">
                            <Ellipse.RenderTransform>
                                <TranslateTransform x:Name="ThumbTransform" X="0"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <!-- ON avec animation -->
                        <Trigger Property="IsChecked" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                 Storyboard.TargetProperty="X"
                                                 To="20"
                                                 Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="ThumbTransform"
                                                 Storyboard.TargetProperty="X"
                                                 To="0"
                                                 Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource ThemeFirstBackgroundBrush}"/>
                            <Setter TargetName="SwitchTrack" Property="BorderBrush" Value="{DynamicResource ThemeFirstBackgroundBrush}"/>
                            <Setter TargetName="SwitchThumb" Property="Fill" Value="{DynamicResource DarkBackgroundBrush}"/>
                        </Trigger>
                        <!-- Désactivé -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource WindowBackgroundBrush}"/>
                            <Setter TargetName="SwitchThumb" Property="Fill" Value="{DynamicResource HighlightBakgroundBrush}"/>
                        </Trigger>
                        <!-- Hover -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                         Storyboard.TargetProperty="Height"
                                         To="16"
                                         Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                         Storyboard.TargetProperty="Width"
                                         To="16"
                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                         Storyboard.TargetProperty="Height"
                                         To="13"
                                         Duration="0:0:0.15"/>
                                        <DoubleAnimation Storyboard.TargetName="SwitchThumb"
                                         Storyboard.TargetProperty="Width"
                                         To="13"
                                         Duration="0:0:0.15"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource ThemeSecondBackgroundBrush}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="IsChecked" Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource BackgroundBrush}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
